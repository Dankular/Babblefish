# Babblefish Server Configuration
# Copy this file to .env and update values as needed

# ===== Server Settings =====
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ===== Model Paths =====
MODELS_DIR=../models
WHISPER_MODEL_SIZE=medium
NLLB_MODEL_PATH=../models/nllb-200-distilled-600M-ct2

# ===== Device Configuration =====
# Options: cpu, cuda
DEVICE=cpu

# Options: int8, int16, float16, float32
# int8 recommended for CPU (best performance/quality balance)
COMPUTE_TYPE=int8

# ===== ASR Settings =====
WHISPER_BEAM_SIZE=5
WHISPER_VAD_FILTER=true

# ===== Translation Settings =====
NLLB_BEAM_SIZE=4

# ===== Audio Settings =====
SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=4096

# ===== Room Settings =====
MAX_PARTICIPANTS_PER_ROOM=10
MAX_ROOMS=100
ROOM_TIMEOUT_SECONDS=3600

# ===== TTS Router Settings (Phase 2/3) =====
MAX_SERVER_TTS_CLIENTS=4
GPU_BUDGET_MS=2000

# ===== Client Capability Thresholds (Phase 2/3) =====
MIN_VRAM_F5TTS_MB=4096
MIN_VRAM_KOKORO_MB=2048
